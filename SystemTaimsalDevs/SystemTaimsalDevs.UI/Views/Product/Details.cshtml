@model SystemTaimsalDevs.EL.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre Producto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NameProduct)
        </dd>
        <dt class="col-sm-2">
            Imagen
        </dt>
        <dd class="col-sm-10">
            <img src="~/GuardarImagen/@Model.ImageProduct" class="rounded" alt="..." width="100" height="100">
        </dd>
        <dt class="col-sm-2">
            Descripción
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescriptionProduct)
        </dd>
        <dt class="col-sm-2">
            Precio
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            Stock
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
    </dl>
</div>
<div>
    <a type="buttom" class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.IdProduct">Editar</a> |
    <a type="buttom" class="btn btn-primary" asp-action="Index">Volvel a la Lista</a>
</div>
