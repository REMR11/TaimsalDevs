@model SystemTaimsalDevs.EL.UserDev

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro de eliminar?</h3>
<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre Usuario
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameUser)
        </dd>
        <dt class = "col-sm-2">
            Apellido Usuario
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastNameUser)
        </dd>
        <dt class = "col-sm-2">
            E-mail
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Login)
        </dd>
        <dt class = "col-sm-2">
            Contraseña
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class = "col-sm-2">
            Estado
        </dt>
        @if (Model.StatusUser == 1)
        {
            <dd class="col-sm-10">
                ACTIVO
            </dd>
        }
        else if (Model.StatusUser == 2)
        {
            <dd class="col-sm-10">
                INACTIVO
            </dd>
        }
        else
        {
            <dd class="col-sm-10"></dd>
        }
        <dt class = "col-sm-2">
            Fecha de Registro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegistrationUser)
        </dd>
        <dt class = "col-sm-2">
            Nombre Rol
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdRolNavigation.NameRol)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdUser" />
        <button type="submit" value="Delete" class="btn btn-danger">Eliminar</button> |
        <a type="button" asp-action="Index" class="btn btn-primary">Volvel a la Lista</a>
    </form>
</div>
