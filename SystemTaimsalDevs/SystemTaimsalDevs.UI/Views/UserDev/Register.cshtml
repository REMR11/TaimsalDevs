@model SystemTaimsalDevs.EL.UserDev

@{
    Layout = null;
}


<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/css/csslogin.css" rel="stylesheet" />
</head>
<body>
    <div class="container h-100">
        <div class="d-flex justify-content-center h-100">
            <div class="user_card">
@*                <div class="d-flex justify-content-center">
                    <div class="brand_logo_container">
                        <a asp-controller="Home" asp-action="Index">
                        <img src="~/Img/LogosTaimsal/LogoLogin.png" class="brand_logo" alt="Logo">
                        </a>
                    </div>
                </div>*@
                <div class="d-flex justify-content-center form_container">
                    <form asp-action="Register">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="input-group mb-2">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-user-plus"></i></span>
                            </div>
                            <select asp-for="IdRol" class="form-control input_user" asp-items="ViewBag.IdRol"></select>
                        </div>           
                        <div class="input-group mb-2">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-user-plus"></i></span>
                            </div>
                            <input asp-for="NameUser" class="form-control input_user" placeholder="Nombre" />
                            <span asp-validation-for="NameUser" class="text-danger"></span>
                        </div>        
                        <div class="input-group mb-2">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-user-lock"></i></span>
                            </div>
                            <input asp-for="LastNameUser" class="form-control input_user" placeholder="Apellido" />
                            <span asp-validation-for="LastNameUser" class="text-danger"></span>
                        </div>
                        <div class="input-group mb-2">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-at"></i></span>
                            </div>
                            <input asp-for="Login" class="form-control input_user" placeholder="E-mail" />
                            <span asp-validation-for="Login" class="text-danger"></span>
                        </div>
                        <div class="input-group mb-2">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="password" asp-for="Password" class="form-control input_user" placeholder="Contraseña" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="input-group mb-2">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="password" asp-for="ConfirmPassword_aux" class="form-control input_user" placeholder="Confirmar Contraseña" />
                            <span asp-validation-for="ConfirmPassword_aux" class="text-danger"></span>
                        </div>
                        <div class="input-group mb-2">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input asp-for="RegistrationUser" class="form-control input_user" placeholder="Fecha de Hoy" />
                            <span asp-validation-for="RegistrationUser" class="text-danger"></span>
                        </div>
                        <div class="input-group mb-2">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <select asp-for="StatusUser" class="form-control">
                                <option value="">Seleccionar</option>
                                <option selected value="1">ACTIVO</option>
                                <option value="2">INACTIVO</option>
                            </select>
                            <span asp-validation-for="ConfirmPassword_aux" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-center mt-3 login_container">
                            <button type="submit" value="Register" class="btn login_btn">Registrarse</button>
                        </div>
                    </form>
                </div>

                <div class="mt-4">
                    <div class="d-flex justify-content-center links">
                        Ya tienes una cuenta? <a asp-controller="UserDev" asp-action="Login" class="ml-2 text-white">Inciar Sesion</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}